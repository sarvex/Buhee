<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sarvex.buhee">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".main.MainActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <meta-data
      android:name="com.google.android.gms.car.application"
      android:resource="@xml/automotive_app_desc"/>

    <service android:name=".utility.MyMessagingService">
    </service>

    <receiver android:name=".utility.MessageReadReceiver">
      <intent-filter>
        <action android:name="com.sarvex.buhee.ACTION_MESSAGE_READ"/>
      </intent-filter>
    </receiver>
    <receiver android:name=".utility.MessageReplyReceiver">
      <intent-filter>
        <action android:name="com.sarvex.buhee.ACTION_MESSAGE_REPLY"/>
      </intent-filter>
    </receiver>

    <meta-data
      android:name="io.fabric.ApiKey"
      android:value="a355546c764b59eac93b935815405095a72745ca"/>

    <activity android:name=".login.LoginActivity">
    </activity>
    <activity android:name=".login.ForgotActivity">
    </activity>
    <activity android:name=".login.SignupActivity">
    </activity>
    <activity android:name=".login.ProfileActivity">
    </activity>
    <activity android:name=".entry.AddEntryActivity">
    </activity>
    <activity android:name=".entry.RemoveEntryActivity">
    </activity>
    <activity android:name=".ledger.AddLedgerActivity">
    </activity>
    <activity android:name=".ledger.SettleLedgerActivity">
    </activity>
    <activity android:name=".ledger.RemoveLedgerActivity">
    </activity>
    <activity android:name=".entry.SettleEntryActivity">
    </activity>
  </application>

</manifest>
